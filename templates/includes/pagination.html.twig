<div class="flex pt-6 ">
    {# tailwindcss Sliding pagination control implementation #}
    {% if pageCount > 1 %}
    <div class="inline-block mx-auto">
        <div class="flex flex-row items-center w-auto space-x-3">
            {% if first is defined and current != first %}

            <span class="px-3 py-1 text-lg font-bold bg-gray-100 rounded-md shadow-md text-slate-500">

                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                    <span class="text-medium">&laquo;</span>
                </a>
            </span>
            {% endif %}

            {% if previous is defined %}
            <span class="px-3 py-1 text-lg bg-gray-100 rounded-md shadow-md text-slate-500">
                <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <span class="text-medium">&lsaquo;</span>
                </a>
            </span>
            {% endif %}

            {% for page in pagesInRange %}
            {% if page != current %}
            <span class="px-3 py-1 text-lg bg-gray-100 rounded-md shadow-md text-slate-500">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </span>
            {% else %}
            <span class="px-3 py-1 text-lg font-bold text-white rounded-md shadow-md bg-slate-700">{{ page }}</span>
            {% endif %}
            {% endfor %}

            {% if next is defined %}
            <span class="px-3 py-1 text-lg bg-gray-100 rounded-md shadow-md text-slate-700">
                <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    {# &gt; #}
                    {# {{ icon('arrow right','25', 'fill-slate-500') }} #}
                    <span class="text-medium">&rsaquo;</span>

                </a>
            </span>
            {% endif %}

            {% if last is defined and current != last %}
            <span class="flex px-3 py-1 text-lg font-bold bg-gray-100 rounded-md shadow-md text-slate-700">
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                    {# &gt;&gt; #}
                    {# {{ icon('double arrow right','25', 'fill-slate-500') }} #}
                    <span class="text-medium">&raquo;</span>
                </a>
            </span>
            {% endif %}




        </div>
    </div>
    {% endif %}
</div>