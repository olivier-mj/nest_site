{% extends 'base.html.twig' %}

{% block title %}Archives{% endblock %}

{% block hero%}
<section class="hero-section archive-hero">
	<div class="container">
		<div class="overlay"></div>
		<div class="heading">
			<div class="heading_title ">
				<h1 class="fw-bold">Archives</h1>
			</div>
		</div>
	</div>
</section>
{% endblock %}

{% block body %}
<div id="archives" class="page-content archives">
	<div class="container ">

		<div class="row">
			<div class="archive__container col-12 col-md-7 col-lg-9 ">
				<div class="archive__content">
					<h2>Archives:</h2>
					{% if posts == false %}


					{% else %}
					<h3>{{year}}</h3>
					<ul>
						{% for post in posts %}
							<li>
								<a href="{{ path('blog.show', {id: post.id, slug: post.slug }) }}"> 
									{{ post.createdAt|format_datetime('short', 'none', locale='fr') }} - {{ post.title }}
								</a>
							</li>
						{% endfor%}
					</ul>
					{% endif%}
				</div>
			</div>

		</div>
	</div>
</div>


{% endblock %}
