{% extends 'base.html.twig' %}

{% block title %}Archives{% endblock %}

{# {% block hero%}
<section class="hero-section archive-hero">
	<div class="container">
		<div class="overlay"></div>
		<div class="heading">
			<div class="heading_title ">
				<h1 class="fw-bold">Archives</h1>
			</div>
		</div>
	</div>
</section>
{% endblock %} #}

{% block body %}
	<div id="archives" class="page-content archives">
		<div class="container ">
			<h1>Archives:</h1>	
            <div class="row">
                <div class="col-md-3">

					<ul id="sommaire"></ul>
                </div>
                <div class="col-md-9">
					<ul>
						{% for year, archive in archives %}
							<li>
								<h2>
									{{year}}
								</h2>
							</li>

						<ul>
							{% for month, posts in archive %}
								<li>
									{% set mon = month| date('m')%}
									<h3>
                                            {{ month }}
                                    </h3>
								</li>

							 	<ul>
									{% for post in posts %}
										<li>
											<a href="{{ path('blog.show', {id: post.id, slug: post.slug }) }}"> 
												{{ post.createdAt|format_datetime('short', 'none', locale='fr') }} - {{ post.title }}
											</a>
										</li>
									{% endfor%}
								</ul>

							{% endfor%}
						</ul>
					{% endfor%}
					</ul>
				
					
                </div>
            </div>
		</div>

	</div>
{% endblock %}


{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('js/archive') }}
{% endblock %}
