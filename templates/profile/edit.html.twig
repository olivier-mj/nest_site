{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
{# {{dump(user)}} #}
<section id="profile" class="py-8">
    <div class="container mx-auto">
        <div>{{ form_start(form) }}
            <div class="md:grid md:grid-cols-3 md:gap-6">
                <div class="md:col-span-1">
                    <div class="px-4 sm:px-0">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Profile</h3>
                        <p class="mt-1 text-sm text-gray-600">
                            This information will be displayed publicly so be careful what you share.
                        </p>
                    </div>
                </div>
                <div class="mt-5 md:mt-0 md:col-span-2">
                    <div class="shadow sm:rounded-md sm:overflow-hidden">
                        <div class="px-4 py-5 space-y-6 bg-white sm:p-6">
                            <div>
                                {{ form_label(form.imageFile,'Avatar:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})}}
                                <div class="flex items-center mt-1">
                                    {% if user.filename %}
                                    <span class="inline-block w-12 h-12 overflow-hidden bg-gray-100 rounded-full">
                                        <img src="{{ vich_uploader_asset( user, 'imageFile') |  imagine_filter('user_thumbnail') }}"
                                            alt="avatar" class="w-full h-full drop-shadow-md">
                                    </span>
                                    {% else %}
                                    <span class="inline-block w-12 h-12 overflow-hidden bg-gray-100 rounded-full">
                                        <svg class="w-full h-full text-gray-300" fill="currentColor"
                                            viewBox="0 0 24 24">
                                            <path
                                                d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z">
                                            </path>
                                        </svg>
                                    </span>
                                    {% endif %}
                                    {{ form_row(form.imageFile) }}
                                    {{ form_label(
                                    form.imageFile,'Upload image file', {
                                    'label_attr': {'class': 'cursor-pointer px-3 py-2 ml-5 text-sm font-medium leading-4 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}
                                    })
                                }}
                                </div>
                            </div>
                            <div class="grid grid-cols-6 gap-6">
                                <div class="col-span-6 sm:col-span-4">
                                    {{ form_label(form.nickname,'Nick name:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})  }}
                                    {{ form_row(form.nickname,{'attr': {'class': 'block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                                </div>
                            </div>
                            <div>
                                {{ form_label(form.description,'Description:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_row(form.description,{'attr': {'class': 'block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}})}}
                            </div>
                        </div>
                        <div class="px-4 py-3 text-right bg-gray-50 sm:px-6">
                            <button type="submit"
                                class="inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hidden sm:block" aria-hidden="true">
                <div class="py-5">
                    <div class="border-t border-gray-200"></div>
                </div>
            </div>
            {# profile end #}
            {# personnal info  start#}
            <div class="md:grid md:grid-cols-3 md:gap-6">
                <div class="md:col-span-1">
                    <div class="px-4 sm:px-0">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Personal Information</h3>
                        <p class="mt-1 text-sm text-gray-600">
                            Use a permanent address where you can receive mail.
                        </p>
                    </div>
                </div>
                <div class="mt-5 md:mt-0 md:col-span-2">
                    <div class="overflow-hidden shadow sm:rounded-md">
                        <div class="px-4 py-5 bg-white sm:p-6">
                        <div class="grid grid-cols-6 gap-6">
                            <div class="col-span-6 sm:col-span-3">
                                {{ form_label(form.first_name,'Fist name:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_row(form.first_name,{'attr': {'class': 'block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                            </div>
                            <div class="col-span-6 sm:col-span-3">
                                {{ form_label(form.last_name,'Last name:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_row(form.last_name,{'attr': {'class': 'block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                            </div>
                            <div class="col-span-6 sm:col-span-6">
                                {{ form_label(form.email,'Email:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_row(form.email,{'attr': {'class': 'block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                            </div>
                        </div>

                    </div>
                    <div class="px-4 py-3 text-right bg-gray-50 sm:px-6">
                        <button type="submit"
                            class="inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Save
                        </button>
                    </div>
                    </div>
                </div>
            </div>
            <div class="hidden sm:block" aria-hidden="true">
                <div class="py-5">
                    <div class="border-t border-gray-200"></div>
                </div>
            </div>
            {# personnal info  end#}
            {#  social network  start #}
            <div class="md:grid md:grid-cols-3 md:gap-6">
                <div class="md:col-span-1">
                    <div class="px-4 sm:px-0">
                        <h3 class="text-lg font-medium leading-6 text-gray-900">Social Network</h3>
                        <p class="mt-1 text-sm text-gray-600">
                            This information will be displayed publicly so be careful what you share.
                        </p>
                    </div>
                </div>
                <div class="w-full mt-5 md:mt-0 md:col-span-2">
                    <div class="shadow sm:rounded-md sm:overflow-hidden">
                        <div class="px-4 py-5 space-y-6 bg-white sm:p-6">
                            <div class="grid grid-cols-3 gap-6">
                                <div class="col-span-6 lg:col-span-3">
                                    {{ form_label(form.twitch,'Twitch', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})}}
                                    <div class="flex mt-1 rounded-md shadow-sm">
                                        <span
                                            class="inline-flex items-center px-3 text-sm text-gray-500 border border-r-0 border-gray-300 rounded-l-md bg-gray-50">
                                            https://twitch.tv/
                                        </span>
                                        {{ form_row(form.twitch,{'attr': {'class': 'flex-1 block w-full border-gray-300 rounded-none focus:ring-indigo-500 focus:border-indigo-500 rounded-r-md sm:text-sm'} }) }}
                                    </div>
                                </div>
                            </div>
                            <div class="grid grid-cols-3 gap-6">
                                <div class="col-span-6 lg:col-span-2">
                                    {{ form_label(form.youtube,'Youtube:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})
                                    }}
                                    {{ form_row(form.youtube,{'attr': {'class': 'block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'} }) }}
                                </div>
                            </div>

                            <div class="grid grid-cols-3 gap-6">
                                <div class="col-span-6 lg:col-span-2">
                                    {{ form_label(form.twitter,'Twitter:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})}}
                                    <div class="flex mt-1 rounded-md shadow-sm">
                                        <span
                                            class="inline-flex items-center px-3 text-sm text-gray-500 border border-r-0 border-gray-300 rounded-l-md bg-gray-50">
                                            https://twitter.com/
                                        </span>
                                        {{ form_row(form.twitter,{'attr': {'class': 'flex-1 block w-full border-gray-300 rounded-none focus:ring-indigo-500 focus:border-indigo-500 rounded-r-md sm:text-sm'} }) }}
                                    </div>
                                </div>
                            </div>
                            <div class="grid grid-cols-3 gap-6">
                                <div class="col-span-6 lg:col-span-2">
                                    {{ form_label(form.instagram,'Instagram:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})
                                    }}
                                    <div class="flex col-span-6 mt-1 rounded-md shadow-sm lg:col-span-4">
                                        <span
                                            class="inline-flex items-center px-3 text-sm text-gray-500 border border-r-0 border-gray-300 rounded-l-md bg-gray-50">
                                            https://www.instagram.com/
                                        </span>
                                        {{ form_row(form.instagram,{'attr': {'class': 'flex-1 block w-full border-gray-300 rounded-none focus:ring-indigo-500 focus:border-indigo-500 rounded-r-md sm:text-sm'} }) }}
                                    </div>
                                </div>
                            </div>
                            <div class="grid grid-cols-3 gap-6">
                                <div class="col-span-6 lg:col-span-2">
                                    {{ form_label(form.facebook,'Facebook:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})
                                    }}
                                    <div class="flex col-span-6 mt-1 rounded-md shadow-sm lg:col-span-4">
                                        <span
                                            class="inline-flex items-center px-3 text-sm text-gray-500 border border-r-0 border-gray-300 rounded-l-md bg-gray-50">
                                            https://www.facebook.com/
                                        </span>
                                        {{ form_row(form.facebook,{'attr': {'class': 'flex-1 block w-full border-gray-300 rounded-none focus:ring-indigo-500 focus:border-indigo-500 rounded-r-md sm:text-sm'} }) }}
                                    </div>
                                </div>
                            </div>
                            <div class="grid grid-cols-3 gap-6">
                                <div class="col-span-6 lg:col-span-2">
                                    {{ form_label(form.steam,'Steam:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})
                                    }}
                                    <div class="flex col-span-6 mt-1 rounded-md shadow-sm lg:col-span-4">
                                        <span
                                            class="inline-flex items-center px-3 text-sm text-gray-500 border border-r-0 border-gray-300 rounded-l-md bg-gray-50">
                                            https://steamcommunity.com/id/
                                        </span>
                                        {{ form_row(form.steam,{'attr': {'class': 'flex-1 block w-full border-gray-300 rounded-none focus:ring-indigo-500 focus:border-indigo-500 rounded-r-md sm:text-sm'} }) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="px-4 py-3 text-right bg-gray-50 sm:px-6">
                            {{ form_row(form.save) }}
                        </div>
                    </div>

                </div>
            </div>
            {# social network end #}
            {{ form_end(form) }}
        </div>

    </div>
</section>
{% endblock %}

{% block javascripts %}
{{ parent() }}

{{ encore_entry_script_tags('js/profile') }}
{% endblock javascripts %}