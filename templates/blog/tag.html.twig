{% extends 'base.html.twig' %}

{% block title %}Tag: {{ tag.name }} {% endblock %}

{% block body %}
<div class="text-white hero-section blog-single page-header bg-secondary">
    <div class="container">
        <h1>{{ tag.name }}</h1>
    </div>
</div>

<div class="py-5 text-white hero-section blog-single page-header bg-secondary">
    <div class="container mx-auto">
        <div class="flex flex-wrap w-full ">
            <div class="w-full mb-6 lg:w-1/2 lg:mb-0">
                <h1 class="flex items-center text-2xl font-medium text-gray-900 imb-2 sm:text-3xl title-font">
                    {{ tag.name }}</h1>
                <div class="w-20 h-1 bg-indigo-500 rounded "></div>
            </div>
        </div>
    </div>
</div>
<div class="py-5 tags-list">
    <div class="container mx-auto">
        <div class="flex flex-wrap -m-4">
        {% cache  "tag_page" ttl(300) %}
            {% for post in pagination %}
            {{ include('blog/articles-card.twig') }}
            {% endfor %}
        {% endcache %}

        </div>
        {{ knp_pagination_render(pagination, 'includes/pagination.html.twig') }}

    </div>
</div>
{% endblock %}